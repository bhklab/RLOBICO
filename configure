#!/bin/bash

# Please note there will be a large number of 'Permission denied' messages on install
# This does not mean the installation has failed; this is simply because configure scripts can't be run as sudo

# Configure the package flags for Unix based distributions
config_linux() {
  echo "Searching for your CPLEX installation... This may take some time.\n"
  echo "'Permissions denied' warnings should be ignored."
  # Search from root for the required include directories from IBM ILOG CPLEX
  CPLEX_INCLUDE="$(find / -regex '.*/cplex/include')";
  CONCERT_INCLUDE="$(find / -regex '.*/concert/include')";
  # Search from root for the required library files from IBL ILOG CPLEX
  CPLEX_LIBS="$(find / -regex '.*/cplex/lib/.*/static_pic')";
  CONCERT_LIBS="$(find / -regex '.*/concert/lib/.*/static_pic')";
}

# Configure the package flags for MacOS distributions
config_mac() {
  echo "Searching for your CPLEX installation... This may take some time."
  # Search from root for the required include directories from IBM ILOG CPLEX
  CPLEX_INCLUDE="$(find /Applications -regex '.*/cplex/include')";
  echo "CPLEX_INCLUDE: $CPLEX_INCLUDE";
  CONCERT_INCLUDE="$(find /Applications -regex '.*/concert/include')";
  echo "CONCERT_INCLUDE: $CPLEX_INCLUDE";
  # Search from root for the required library files from IBL ILOG CPLEX
  CPLEX_LIBS="$(find /Applications -regex '.*/cplex/lib/.*/static_pic')";
  echo "CPLEX_LIBS: $CPLEX_LIBS";
  CONCERT_LIBS="$(find /Applications -regex '.*/concert/lib/.*/static_pic')";
  echo "CONCERT_LIBS: $CONCERT_LIBS";
}

case "$OSTYPE" in
  solaris*|linux*|bsd*)
    config_linux
    ;;
  darwin*) 
    config_mac
    ;;
  *)
    echo "Currently only supported on Unix and MacOS platforms"
    ;;
esac

# Write package flags to src/Makevars file
# NOTE: This will overwrite any existing Makevars file; rename the file to avoid this
echo "PKG_CXXFLAGS= -DIL_STD" > src/Makevars
echo "PKG_CPPFLAGS = -I$CPLEX_INCLUDE -I$CONCERT_INCLUDE" >> src/Makevars
echo "PKG_LDFLAGS = -L$CPLEX_LIBS -L$CONCERT_LIBS" >> src/Makevars
echo "PKG_LIBS = -L$CPLEX_LIBS -L$CONCERT_LIBS -lilocplex -lconcert -lcplex -lm -lpthread" >> src/Makevars

# Exit as success
exit 0;